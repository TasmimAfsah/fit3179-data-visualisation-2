{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 400,
  "height": 300,
  "data": {
    "url": "temps_forest_2020_clean.csv",
    "format": { "type": "csv" }
  },
  "transform": [
    { "filter": "datum['Deforestation, 2015-2020'] > 0" },
    { "calculate": "datum['Deforestation, 2015-2020']", "as": "Deforestation" },
    { "sort": [{ "field": "Deforestation", "order": "descending" }],
      "window": [{ "op": "rank", "as": "rank" }] },
    { "filter": "datum.rank <= 10" }
  ],
  "mark": { "type": "bar", "color": "#e74c3c" },
  "encoding": {
    "x": {
      "field": "Deforestation",
      "type": "quantitative",
      "title": "Deforestation (1000 km²)"
    },
    "y": {
      "field": "Entity",
      "type": "nominal",
      "title": "Country",
      "sort": { "field": "Deforestation", "order": "descending" }
    },
    "tooltip": [
      { "field": "Entity", "type": "nominal", "title": "Country" },
      { "field": "Deforestation", "type": "quantitative", "title": "Deforestation (1000 km²)", "format": ".1f" }
    ]
  }
}
