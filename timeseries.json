{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 450,
  "data": {
    "url": "forest_averages.csv",
    "format": { "type": "csv" }
  },
  "mark": { "type": "line", "strokeWidth": 3, "color": "#6c757d" },
  "encoding": {
    "x": {
      "field": "Year",
      "type": "quantitative",
      "title": "Year",
      "scale": {"zero": false},
      "axis": {"format": "d"}
    },
    "y": {
      "field": "ForestArea",
      "type": "quantitative",
      "title": "Average Forest Area (1000 kmÂ²)",
      "scale": {"zero": false}
    },
    "tooltip": [
      { "field": "Year", "type": "quantitative", "title": "Year" },
      { "field": "ForestArea", "type": "quantitative", "title": "Avg Forest Area", "format": ".0f" }
    ]
  }
}